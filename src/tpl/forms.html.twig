{% macro input(name, exemple = "", type = "text", value = "") %}
    <div class="form-group">
	    <label for="inputEmail3" class="col-sm-3 control-label" style="text-align:left;margin-bottom:7px">{{ name }}</label>
	    <div class="col-sm-9">
	      <input type="{{ type }}" name={{ name }} value="{{ value }}" class="form-control" id="inputEmail3" placeholder="{{ exemple }}">
	    </div>
    </div>
{% endmacro %}

{% macro submit(name="#submit") %}
    <div class="form-group">
	    <div class="col-sm-offset-3 col-sm-9">
	      <button type="submit" class="btn btn-default">{{ name }}</button>
	    </div>
    </div>
{% endmacro %}

{% macro textarea(name, value = "", type = "text", size = 20) %}
    <div class="form-group">
	    <label for="inputEmail3" class="col-sm-3 control-label" style="text-align:left;margin-bottom:10px">{{ name }}</label>
	    <div class="col-sm-9">
	      	<textarea name={{ name }} value="{{ value }}" class="form-control" rows="3"></textarea>
	    </div>
    </div>
{% endmacro %}

{% macro upload(name, value = "", type = "text", size = 20) %}
<div class="form-group">
    <label for="exampleInputFile" class="col-sm-3 control-label" style="text-align:left;margin-bottom:10px">{{ value }}</label>
    <div class="col-sm-9">
         <input type="hidden" name="MAX_FILE_SIZE" value="500000">
    	<input type="file" name="{{ name }}" id="{{ name }}" id="exampleInputFile">
    </div>
  </div>
{% endmacro %}