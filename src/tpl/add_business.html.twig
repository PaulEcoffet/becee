{% extends "main_layout.html.twig" %}
{% from 'forms.html.twig' import submit, textarea, upload, input as input_field %}
{% block title %}#business_registration#{% endblock %}

{% block content %}
		<div class="container-fluid" id="center-row">
		    <div class="row">
		        <div id="main" class="col-md-12">
		        	<div class="panel">
					    <div class="panel-heading"></div>
					    <div class="panel-body">
						    <span style="line-height: 30px; vertical-align:middle;">#Buisness_Registration_Page#</span>
					    </div>
					</div><!-- end panel panel-info -->
		        	<div class="panel">
					    <div class="panel-heading"></div>
					    <div class="panel-body">
							<form class="form-horizontal" role="form" style="width:100%;font-size:15px;font-weight:400;padding:20px" method="post" enctype="multipart/form-data" action="app.php?business/add/processing">
								{{ input_field('name') }}<hr />
								{{ input_field('city') }}
								{{ input_field('province') }}
								{{ input_field('postcode') }}
								{{ input_field('country') }}<hr />
								{{ input_field('line1') }}
								{{ input_field('line2') }}<hr />
								{{ input_field('lat') }}
								{{ input_field('lng') }}
								{{ textarea('description') }}
								{{ input_field('website') }}<hr />
								{{ upload('img_business_med', 'images') }}<hr />
								{{ submit('Sign In') }}
							</form>
					    </div>
					</div><!-- end panel panel-info -->
		        </div><!-- end col-md-12-->
		    </div><!-- end row -->
		</div>
{% endblock %}